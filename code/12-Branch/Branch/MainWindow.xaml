<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Branch"
        mc:Ignorable="d"
        Title="Tabbed Explorer"  
				FontSize='24' Height="600" Width="800" WindowStartupLocation='CenterScreen'  WindowState='Maximized'>
	<Window.Resources>
		<Style TargetType='TabItem'>
			<Setter Property='MinWidth'
							Value='90' />
		
		</Style>
	</Window.Resources>
	<TabControl Background='LightSteelBlue'>
		<TabItem Header='If Then'>
			<local:IfThenDemo />
		</TabItem>
		<TabItem Header='Logical'>
			<local:LogicalDemo />
		</TabItem>

	

		<TabItem Header='Select Case'>
			<local:SelectDemo />
		</TabItem>

	</TabControl>
</Window>
