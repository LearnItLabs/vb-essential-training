<UserControl x:Class="ExitDemo"
						 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
						 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
						 xmlns:local="clr-namespace:Loops"
						 mc:Ignorable="d"
						 d:DesignHeight="450"
						 d:DesignWidth="800"
						 FontSize='24'
						 Loaded='UserControl_Loaded'>
	<StackPanel Margin='20'>
		<TextBlock Text='The string to search' />
		<TextBox x:Name='OrignalTextBox'
						 Text='A banana and pear took a stroll,
Through the zoo with a lamb and a mole!
They saw monkeys and bats,
And some penguins in hats,
Laughing hard as the day took its toll!'
						 TextWrapping='Wrap' />
		<StackPanel Orientation="Horizontal"
								DockPanel.Dock="Top"
								HorizontalAlignment="Center">
			<Button x:Name="RunButton"
							Content="Exit For" />
			<Button x:Name="ContinueButton"
							Content="Continue For" />
			<Button x:Name="ClearButton"
							Content="Clear" />
		</StackPanel>
	</StackPanel>

</UserControl>
